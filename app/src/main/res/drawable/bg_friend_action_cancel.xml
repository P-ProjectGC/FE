<?xml version="1.0" encoding="utf-8"?>
<!-- 최신 이미지 톤의 밝은 그라데이션 회색 버튼 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 단색 (fallback) -->
    <solid android:color="#BFC4CE" />

    <!-- 그라데이션 (위 → 아래) -->
    <gradient
        android:startColor="#BFC4CE"
    android:endColor="#9AA1AD"
    android:angle="270" />

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#AEB4BF" /> <!-- 연한 그레이 테두리 -->

    <!-- 둥근 모서리 -->
    <corners android:radius="12dp" />

    <!-- 내부 패딩 -->
    <padding
        android:left="6dp"
        android:right="6dp"
        android:top="4dp"
        android:bottom="4dp" />

</shape>
