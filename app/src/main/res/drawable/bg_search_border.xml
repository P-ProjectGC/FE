<?xml version="1.0" encoding="utf-8"?>
<!--검색창 테두리-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 색 & 두께 -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />   <!-- 연한 회색 -->

    <!-- 모서리 둥글게 -->
    <corners android:radius="12dp" />

    <!-- 안쪽 여백 -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
