<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 흰 배경 -->
    <solid android:color="@android:color/white" />

    <!-- 회색 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#C7C7C7" />

    <!-- 둥근 모서리 -->
    <corners android:radius="12dp" />

    <!-- 내부 여백 -->
    <padding
        android:left="4dp"
        android:top="2dp"
        android:right="4dp"
        android:bottom="2dp" />
</shape>
