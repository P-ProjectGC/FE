<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 파란 그라데이션 -->
    <gradient
        android:startColor="#67C5ED"
        android:endColor="#47A8D4"
        android:angle="270" />

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#67C5ED" />

    <!-- 둥근 모서리 -->
    <corners android:radius="16dp" />

    <!-- 내부 여백 -->
    <padding
        android:left="6dp"
        android:right="6dp"
        android:top="6dp"
        android:bottom="6dp" />
</shape>
