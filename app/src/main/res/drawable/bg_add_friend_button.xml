<?xml version="1.0" encoding="utf-8"?>
<!-- 친구추가 버튼의 배경을 정의하는 xml 문서 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼 배경색 -->
    <solid android:color="#67C5ED" />

    <!-- 테두리(Stroke) -->
    <stroke
        android:width="1dp"
        android:color="#67C5ED" /> <!-- 피그마에 나온 파란색 -->

    <!-- 둥근 모서리 -->
    <corners android:radius="12dp" />

    <!-- 내부 여백 (선과 내용 사이 공간) -->
    <padding
        android:left="6dp"
        android:right="6dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>