<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일정 확정"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:paddingBottom="12dp" />

        <!-- 장소 이름 -->
        <TextView
            android:id="@+id/textPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="해운대 해수욕장"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- 주소 -->
        <TextView
            android:id="@+id/textAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부산 해운대구"
            android:textSize="13sp"
            android:textColor="#7A7F8C"
            android:paddingBottom="16dp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E8EC" />

        <!-- 날짜 선택 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="날짜 선택"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="12dp" />

        <!-- 시작 시간 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작 시간"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <NumberPicker
                android:id="@+id/npStartAmPm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/npStartHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/npStartMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- 종료 시간 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종료 시간"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <NumberPicker
                android:id="@+id/npEndAmPm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/npEndHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/npEndMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <!-- 취소 버튼 -->
            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bottomsheet_cancel"
                android:text="취소"
                android:textColor="#60656C"
                android:textSize="15sp"
                android:gravity="center"
                android:includeFontPadding="false"
                app:backgroundTint="@null"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- 확정 버튼 -->
            <TextView
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_wishlist_confirm_button"
                android:text="확정"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:includeFontPadding="false"
                app:backgroundTint="@null"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
