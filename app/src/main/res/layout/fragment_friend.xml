<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".FriendFragment"
    android:background="@android:color/white">


    <!-- "나의 친구" 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 친구"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#B3000000"
        android:paddingTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/dongle_bold"/>

    <!-- 친구 추가 버튼 (피그마 스타일 반영) -->
    <LinearLayout
        android:id="@+id/btn_add_friend"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_add_friend_button"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_friend_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 추가"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <!-- 검색창 -->
    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@drawable/bg_search_border"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_friend_search"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임으로 검색하세요"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- 친구 수 텍스트 -->
    <TextView
        android:id="@+id/tv_friend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 (0)"
        android:textColor="#777777"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_search"/>

    <!-- 친구목록 RecyclerView 넣을 자리 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_friends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/layout_empty_friends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_empty_friend" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 친구가 없어요"
            android:textSize="25sp"
            android:textColor="#000000"
            android:fontFamily="@font/dongle_bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 추가 버튼을 눌러\n첫 번째 친구를 추가해보세요!"
            android:textSize="14sp"
            android:textColor="#99000000"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/btn_add_friend_empty"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_add_friend_button"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="24dp"  >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_friend_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구 추가하기"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp" />
        </LinearLayout>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>