<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <!-- 상단 타이틀 / 닫기 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일정 수정"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btnCloseSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✕"
                android:textSize="18sp"
                android:textColor="#A0AEC0" />
        </LinearLayout>

        <!-- 장소명 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="장소명"
            android:textSize="13sp"
            android:textColor="#718096" />

        <TextView
            android:id="@+id/textPlaceNameEdit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="장소 이름"
            android:textSize="14sp"
            android:textColor="#2D3748"
            android:background="@drawable/bg_edit_field" />

        <!-- 위치 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="위치"
            android:textSize="13sp"
            android:textColor="#718096" />

        <TextView
            android:id="@+id/textAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="주소"
            android:textSize="13sp"
            android:textColor="#4A5568"
            android:background="@drawable/bg_edit_field" />

        <!-- 시작 시간 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="시작 시간"
            android:textSize="13sp"
            android:textColor="#718096" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <NumberPicker
                android:id="@+id/npEditStartAmPm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/npEditStartHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/npEditStartMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- 종료 시간 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="종료 시간"
            android:textSize="13sp"
            android:textColor="#718096" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <NumberPicker
                android:id="@+id/npEditEndAmPm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/npEditEndHour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/npEditEndMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#EDF2F7" />

        <!-- 삭제 / 취소 / 저장 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp">

            <!-- 일정 삭제 버튼 -->
            <TextView
                android:id="@+id/btnDeleteSchedule"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/bg_edit_delete_outline"
                android:text="일정 삭제"
                android:textSize="14sp"
                android:textColor="#FF3B30" />

            <!-- 하단 취소 / 저장 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/btnCancelEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_button_secondary"
                    android:text="취소"
                    android:textSize="14sp"
                    android:textColor="#4A5568" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/btnConfirmEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_button_primary"
                    android:text="저장"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
