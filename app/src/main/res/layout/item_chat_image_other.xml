<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- 보낸 사람 이름 -->
    <TextView
        android:id="@+id/tvSenderNameImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포또누나"
        android:textColor="#6A7282"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="2dp">


        <!-- 발신자 프로필 이미지 -->
        <ImageView
            android:id="@+id/ivSenderProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/profile_basic"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" />


        <!-- 이미지 말풍선 -->
        <ImageView
            android:id="@+id/ivImageOther"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_chat_bubble_other" />

        <!-- 시간 -->
        <TextView
            android:id="@+id/tvTimeImageOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="10:27"
            android:textColor="#A0A7B5"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
