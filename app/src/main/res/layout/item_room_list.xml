<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- 방 제목 -->
        <TextView
            android:id="@+id/tvRoomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여름 부산 여행"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- 날짜 행 -->
        <LinearLayout
            android:id="@+id/layoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivDateIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_room_date"
                 />

            <TextView
                android:id="@+id/tvRoomDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="10월 28일 - 10월 30일"
                android:textSize="13sp"
                android:textColor="#50555C" />
        </LinearLayout>

        <!-- 메모 행 -->
        <LinearLayout
            android:id="@+id/layoutMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivMemoIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_room_memo"
                 />

            <TextView
                android:id="@+id/tvRoomMemo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="해운대 방문 예정"
                android:textSize="13sp"
                android:textColor="#50555C"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 인원 수 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivMemberIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/icon_room_member"
                    />

                <TextView
                    android:id="@+id/tvMemberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4명"
                    android:textSize="13sp"
                    android:textColor="#50555C" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
