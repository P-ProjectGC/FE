<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/transparent">

    <!-- 실제 카드 모양(흰 배경 + 연하늘색 테두리) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_wishlist_card"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <!-- 장소 이름 -->
        <!-- 첫 줄: 장소 이름 + 삭제 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 장소 이름 -->
            <TextView
                android:id="@+id/textPlaceNameWishlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="장소 이름"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- [삭제] 버튼 -->
            <TextView
                android:id="@+id/btnDeleteWishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FF4D4D"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>


        <!-- 주소 -->
        <TextView
            android:id="@+id/textAddressWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="주소"
            android:textSize="13sp"
            android:textColor="#7A7F8C" />

        <!-- 추가: 나 (조금 아래로) -->
        <TextView
            android:id="@+id/textAddedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="추가: 나"
            android:textSize="12sp"
            android:textColor="#B0B4BF" />

        <!-- 일정 확정 버튼 (피그마 느낌 pill) -->
        <!-- 일정 확정 '버튼' (실제는 TextView라 모양이 안 깨짐) -->
        <TextView
            android:id="@+id/btnConfirmSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="end"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_wishlist_confirm_button"
            android:text="일정 확정"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:includeFontPadding="false"
            android:clickable="true"
            android:focusable="true" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
