<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_logo_2">

    <!-- ============================= -->
    <!-- 상단 헤더: 뒤로가기 + 로고      -->
    <!-- ============================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reset_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 뒤로가기 버튼 영역 (아이콘 + '뒤로' 텍스트) -->
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_back_room_making" />

            <TextView
                android:id="@+id/tv_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로"
                android:textSize="14sp"
                android:textColor="#51BDEB"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- 상단 로고 -->
        <ImageView
            android:id="@+id/reset_pw_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_logo"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ============================= -->
    <!-- 타이틀 영역 (제목 + 설명)       -->
    <!-- ============================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reset_inner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/reset_header">

        <TextView
            android:id="@+id/tv_reset_pw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 비밀번호 설정"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_reset_pw_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="새로운 비밀번호를 입력해주세요."
            android:textSize="16sp"
            android:textColor="#333333"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/tv_reset_pw_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===================================== -->
    <!-- 입력 폼 스크롤 영역 (새 비밀번호 폼)   -->
    <!-- ===================================== -->
    <ScrollView
        android:id="@+id/reset_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/reset_inner_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reset_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="32dp"
            android:paddingBottom="40dp">

            <!-- 새 비밀번호 라벨 -->
            <TextView
                android:id="@+id/tv_new_pw_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="새 비밀번호"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginStart="3dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 새 비밀번호 입력 (파란 pill 배경) -->
            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_signup_button"
                android:paddingHorizontal="10dp"
                android:textSize="13sp"
                android:hint="영문+숫자 6~20자"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/tv_new_pw_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 새 비밀번호 확인 라벨 -->
            <TextView
                android:id="@+id/tv_new_pw_confirm_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="새 비밀번호 확인"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toBottomOf="@id/et_new_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 새 비밀번호 확인 입력 -->
            <EditText
                android:id="@+id/et_new_password_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_signup_button"
                android:paddingHorizontal="10dp"
                android:textSize="13sp"
                android:hint="새 비밀번호를 다시 입력하세요"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/tv_new_pw_confirm_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 에러 메시지 (빨간 텍스트) -->
            <TextView
                android:id="@+id/tv_pw_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비밀번호가 일치하지 않습니다."
                android:textColor="#FF4C4C"
                android:textSize="11sp"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/et_new_password_confirm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 비밀번호 변경 버튼 (하단 pill 버튼) -->
            <Button
                android:id="@+id/btn_change_pw"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/bg_login_button"
                android:text="비밀번호 변경"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#000000"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@id/tv_pw_error"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 중앙 로딩 인디케이터 -->
    <ProgressBar
        android:id="@+id/resetPwLoading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
