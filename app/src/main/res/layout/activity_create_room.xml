<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateRoomActivity">

    <!-- 공통 헤더 -->
    <include
        android:id="@+id/include_create_room_header"
        layout="@layout/create_room_header_nav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 단계별 Fragment가 들어갈 컨테이너 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_create_room_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/include_create_room_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:name="com.example.plango.ui.createroom.CreateRoomStep1Fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
