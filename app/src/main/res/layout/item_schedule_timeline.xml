<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- 타임라인 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="70dp"
        android:layout_height="match_parent">

        <!-- 시간 -->
        <TextView
            android:id="@+id/textTimeHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            android:textSize="12sp"
            android:textColor="#999999"
            android:paddingStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 위쪽 라인 -->
        <View
            android:id="@+id/viewLineTop"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#8EB6FF"
            app:layout_constraintStart_toStartOf="@id/viewDot"
            app:layout_constraintEnd_toEndOf="@id/viewDot"
            app:layout_constraintTop_toBottomOf="@id/textTimeHour"
            app:layout_constraintBottom_toTopOf="@id/viewDot" />

        <!-- 점 -->
        <View
            android:id="@+id/viewDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/timeline_dot"
            app:layout_constraintTop_toBottomOf="@id/textTimeHour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 아래쪽 라인 -->
        <View
            android:id="@+id/viewLineBottom"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#8EB6FF"
            app:layout_constraintStart_toStartOf="@id/viewDot"
            app:layout_constraintEnd_toEndOf="@id/viewDot"
            app:layout_constraintTop_toBottomOf="@id/viewDot"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutCardSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <!-- 연필 아이콘 (편집 모드에서만 사용) -->
            <ImageView
                android:id="@+id/imageEditSchedule"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_edit"
                android:visibility="invisible" />

            <!-- 장소 이름 -->
            <TextView
                android:id="@+id/textPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소 이름"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C2C2C"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/imageEditSchedule" />

            <!-- 시간 -->
            <LinearLayout
                android:id="@+id/layoutTimeRange"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textPlaceName"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/iconTime"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/icon_clock" />

                <TextView
                    android:id="@+id/textTimeRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00 ~ 16:00"
                    android:textSize="13sp"
                    android:textColor="#3B73FF" />
            </LinearLayout>

            <!-- 주소 -->
            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutTimeRange"
                android:layout_marginTop="6dp"
                android:text="주소 텍스트"
                android:textSize="12sp"
                android:textColor="#7A7A7A" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
